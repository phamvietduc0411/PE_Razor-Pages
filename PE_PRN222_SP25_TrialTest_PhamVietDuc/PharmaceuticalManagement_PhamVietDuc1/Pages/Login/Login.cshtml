@page
@model PharmaceuticalManagement_PhamVietDuc1.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login page";
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger text-center">
        @Model.ErrorMessage
    </div>
}


<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 login-card" style="width: 400px;">
        <h3 class="card-title text-center mb-4">Login</h3>

        <form method="post">
            <div class="form-group mb-3">
                <label for="txtEmail" class="form-label">Email</label>
                <input asp-for="EmailAddress" type="email" class="form-control" id="txtEmail"
                       placeholder="Enter email" required />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="txtPassword" class="form-label">Password</label>
                <input asp-for="MemberPassword" type="password" class="form-control" id="txtPassword"
                       placeholder="Enter password" required />
                <span asp-validation-for="MemberPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" class="btn btn-primary w-45" value="Login" />
                <input type="reset" class="btn btn-danger w-45" value="Cancel" />
            </div>
        </form>
    </div>
</div>
